<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Doctor Information</title>
    <style>
        /* Your CSS styles here */
        .logout-btn {
            position: absolute;
            top: 10px; /* Adjust as needed */
            right: 10px; /* Adjust as needed */
            padding: 12px;
            border: none;
            border-radius: 5px;
            background-color: black; /* Update the background color to black */
            color: #ffffff;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            max-width: 200px;
        }

        .logout-btn:hover {
            background-color: #333333; /* Update the hover background color */
        }

        body{
            background: linear-gradient(300deg, #00bfff, #ff4c68, #ef8172);
            background-size: 180% 180%;
            animation: gradient-animation 18s ease infinite;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            font-family: Arial, sans-serif;
            font-size: 18px;
            color: #dddddd; /* Update the font color */
         }

        .content {
            text-align: center;
        }

        .content div {
            margin-bottom: 20px;
        }

        .content label {
            font-weight: bold;
        }

        .content button {
            margin-top: 20px;
            background-color: #007bff; /* Update the background color */
            color: #ffffff; /* Update the text color */
            border: none;
            border-radius: 5px;
            padding: 12px 24px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .content button:hover {
            background-color: #0056b3; /* Update the hover background color */
        }

         @keyframes gradient-animation {
            0% {
              background-position: 0% 50%;
            }
            50% {
              background-position: 100% 50%;
            }
            100% {
              background-position: 0% 50%;
            }
        }
    </style>
</head>
<body>
    <button class="logout-btn" onclick="logout()">Logout</button>
    <div class="content">
        <h1>Edit Doctor Information</h1>
        <form action="/admin/edit-doctor-info/<%= doctor.id %>" method="POST">
            <div>
                <input type="checkbox" id="modifyPhone" name="modifyPhone">
                <label for="modifyPhone">Modify Phone Number</label>
                <div id="phoneSection" style="display: none;">
                    <p>Current Phone: <%=doctor.phone_number %></p>
                    <label for="newPhone">New Phone Number:</label>
                    <input type="text" id="newPhone" name="newPhone">
                </div>
            </div>
            <div>
                <input type="checkbox" id="modifyEmail" name="modifyEmail">
                <label for="modifyEmail">Modify Email</label>
                <div id="emailSection" style="display: none;">
                    <p>Current Email: <%=doctor.email %></p>
                    <label for="newEmail">New Email:</label>
                    <input type="text" id="newEmail" name ="newEmail">
                </div>
            </div>
            <div>
                <input type="checkbox" id="modifyExperience" name="modifyExperience">
                <label for="modifyExperience">Modify Years of Experience</label>
                <div id="experienceSection" style="display: none;">
                    <p>Current Years of Experience: <%=doctor.years_of_experience %></p>
                    <label for="new_Years_Of_Experience">New Years of Experience:</label>
                    <input type="text" id="new_Years_Of_Experience" name="new_Years_Of_Experience">
                </div>
            </div>
            <div>
                <input type="checkbox" id="modifySalary" name="modifySalary">
                <label for="modifySalary">Modify Salary</label>
                <div id="salarySection" style="display: none;">
                    <p>Current Salary: <%=doctor.salary %></p>
                    <label for="newSalary">New Salary:</label>
                    <input type="text" id="newSalary" name="newSalary">
                </div>
            </div>
            <button type="submit">Save Changes</button>
        </form>
    </div>
    <script>
        function logout() {
            // Redirect back to main page
            window.location.href = "/";
        }

        // Show/hide sections based on checkbox selection
        document.getElementById("modifyPhone").addEventListener("change", function() {
            document.getElementById("phoneSection").style.display = this.checked ? "block" : "none";
        });

        document.getElementById("modifyEmail").addEventListener("change", function() {
            document.getElementById("emailSection").style.display = this.checked ? "block" : "none";
        });

        document.getElementById("modifyExperience").addEventListener("change", function() {
            document.getElementById("experienceSection").style.display = this.checked ? "block" : "none";
        });

        document.getElementById("modifySalary").addEventListener("change", function() {
            document.getElementById("salarySection").style.display = this.checked ? "block" : "none";
        });
    </script>
</body>
</html>
